#!/bin/sh
# hig-log: list revision history
# usage: hig log [<ref> [<file>...]]

. "$_HIG_ROOT/lib/common.sh"

fmt=`hig format`
case $fmt in
git )
  CMD="git log"
  ;;
hg )
  CMD="hg log"
  ;;
svn )
  CMD="svn log"
  ;;
* )
  fatal "log: unknown command for repo type: $fmt"
  ;;
esac

exec $CMD "$@"
