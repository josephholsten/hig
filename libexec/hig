#!/bin/sh
# hig - revision control, wrapped to behave identically for git, hg, svn, darcs & bzr
# Provides get, add, rm, mv, ci, st, co, diff, push, pull.
# Usually symlinked to provide ci, st, co, push & pull as standalone commands
set -e
if [ -n "$TRACE" ]; then
	set -x
fi

log() {
  echo "$@" >&2
}

debug() {
  if [ -n "$DEBUG" ] || [ -n "$TRACE" ]; then
    log "$@"
  fi
}

trace() {
  if [ -n "$TRACE" ]; then
    log "$@"
  fi
}

fatal() {
  log "$@"
  exit 1
}


# return the target of a symbolic link
resolve_link() {
  READLINK=$(type -p greadlink readlink | head -n 1)
  $READLINK "$1"
}

# return the cannonical directory containing a file
abs_dirname() {
  local cwd="$(pwd)"
  trace cwd=$cwd
  local path="$1"
  trace path=$path

  while [ -n "$path" ]; do
    local nextdir="$(dirname "$path")"
    trace nextdir=$nextdir
    cd "$nextdir"
    local name="$(basename "$path")"
    trace name=$name
    path="$(resolve_link "$name" || true)"
    trace path=$path
  done

  trace pwd=$(pwd)
  pwd
  cd "$cwd"
}

# add our libexec to PATH
debug '$0'=$0
libexec_path="$(abs_dirname "$0")"
debug libexec_path=$libexec_path
export PATH="${libexec_path}:$PATH"

# child, always remember where you came from
export _HIG_ROOT="$(abs_dirname "$libexec_path")"
debug _HIG_ROOT=$_HIG_ROOT

# allow being called as `hig foo` or just `foo`
base=$(basename $0)
debug base=$base
if [ "$base" = "hig" ]; then
  command="$1"
  shift || :  # allow shifting to nothing
else
  command="$base"
fi
debug command=$command

case "$command" in
"" | "hig" | "-h" | "--help" )
  exec hig-help
  ;;
* )
  command_path="$(command -v "hig-$command" || true)"
  debug command_path="$command_path"
  if [ ! -x "$command_path" ]; then
    fatal "hig: no such command \`$command'"
  fi

  debug exec "$command_path" "$@"
  exec "$command_path" "$@"
  ;;
esac
