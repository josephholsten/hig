#!/bin/sh
# hig-mktag: make new tag
# usage: hig mktag <tag> [<ref>]

. "$_HIG_ROOT/lib/common.sh"

TAG=`shift`

fmt=`hig format`
case $fmt in
bzr )
  CMD="bzr tag ${TAG}"
  ;;
git )
  CMD="git tag ${TAG}"
  ;;
hg )
  CMD="hg tag ${TAG}"
  ;;
* )
  fatal "mktag: unknown command for repo type: $fmt"
  ;;
esac

exec $CMD "$@"
